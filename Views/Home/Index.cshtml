@{
    ViewData["Title"] = "Home - TutorLive Faculty Selection";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
        }
        .container {
            text-align: center;
            background: white;
            padding: 3rem;
            border-radius: 15px;
            box-shadow: 0 15px 35px rgba(0,0,0,0.1);
            max-width: 600px;
            width: 90%;
        }
        h1 {
            color: #333;
            font-size: 2.5rem;
            margin-bottom: 1rem;
            font-weight: 600;
        }
        .subtitle {
            color: #666;
            font-size: 1.2rem;
            margin-bottom: 3rem;
            line-height: 1.6;
        }
        .nav-buttons {
            display: flex;
            gap: 2rem;
            justify-content: center;
            flex-wrap: wrap;
        }
        .nav-button {
            padding: 1rem 2rem;
            font-size: 1.1rem;
            font-weight: 600;
            text-decoration: none;
            border-radius: 8px;
            transition: all 0.3s ease;
            display: inline-block;
            min-width: 150px;
        }
        .student-btn {
            background: #4CAF50;
            color: white;
        }
        .student-btn:hover {
            background: #45a049;
            transform: translateY(-2px);
            box-shadow: 0 8px 20px rgba(76, 175, 80, 0.3);
        }
        .faculty-btn {
            background: #2196F3;
            color: white;
        }
        .faculty-btn:hover {
            background: #1976D2;
            transform: translateY(-2px);
            box-shadow: 0 8px 20px rgba(33, 150, 243, 0.3);
        }
        .footer {
            margin-top: 2rem;
            color: #888;
            font-size: 0.9rem;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Welcome to the TutorLive-Faculty Selection Website</h1>
        <p class="subtitle">
            Connect students with faculty mentors through our comprehensive selection platform.
            Choose your role below to get started.
        </p>
        
        <div class="nav-buttons">
            <a href="/Student" class="nav-button student-btn">Student Portal</a>
            <a href="/Faculty" class="nav-button faculty-btn">Faculty Portal</a>
        </div>
        
        <div class="footer">
            <p>ASP.NET Core MVC | SignalR | Entity Framework | SQL Server</p>
        </div>
    </div>
</body>
</html>
